<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="164dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ivPortada"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <ImageButton
            android:id="@+id/btnEliminarLibro"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="#B00020"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnQuitarDeGenero"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#4B0082"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del libro"
            android:textStyle="bold"
            android:textColor="#4B0082"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="6dp" />

        <!-- Autor -->
        <TextView
            android:id="@+id/tvAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autor del libro"
            android:textColor="#333333"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Sinopsis -->
        <TextView
            android:id="@+id/tvSinopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción breve"
            android:textColor="#444444"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <!-- Estrellitas -->
        <TextView
            android:id="@+id/tvEstrellas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★★★★★"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
