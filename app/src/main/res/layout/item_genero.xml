<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvGenero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Género"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/btnGeneroDetalle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:contentDescription="Ver más"
            android:src="@android:drawable/ic_media_next"
            app:tint="#4B0082"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLibrosGenero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <!-- Placeholder cuando no hay libros en el género -->
    <TextView
        android:id="@+id/tvEmptyGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin libros en este género"
        android:textColor="#888888"
        android:textStyle="italic"
        android:paddingTop="8dp"
        android:visibility="gone"/>
</LinearLayout>
